<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_1">

    <ImageView
        android:id="@+id/ivScanFileCover"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvScanFileSelected"
        android:layout_width="@dimen/dp_25"
        android:gravity="center"
        android:layout_height="@dimen/dp_25"
        android:layout_margin="@dimen/dp_6"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_12"
        android:background="@drawable/rect_file_select_num_unselected"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvScanFileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:padding="@dimen/dp_5"
        android:text="FILE NAME"
        android:textColor="@color/black"
        android:textSize="@dimen/dp_14"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivScanFileCover" />

</androidx.constraintlayout.widget.ConstraintLayout>